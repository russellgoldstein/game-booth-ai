{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}